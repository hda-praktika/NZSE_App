<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:layout_marginVertical="8dp"
    android:background="@drawable/bg_fragment_channels_item">

    <TextView
        android:id="@+id/textView_provider"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:lines="1"
        android:ellipsize="end"
        android:textColor="@color/light"
        android:gravity="bottom"
        android:includeFontPadding="false"
        app:layout_constraintStart_toStartOf="@id/textView_program"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/textView_program"
        app:layout_constraintEnd_toEndOf="@id/textView_program"
        android:text="Servus TV" />

    <TextView
        android:id="@+id/textView_program"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textFontWeight="600"
        android:lines="1"
        android:ellipsize="end"
        android:textColor="@color/light"
        android:gravity="top"
        android:includeFontPadding="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_provider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/actionButton"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="8dp"
        android:text="Servus TV" />

    <com.example.nzse.widget.ActionButton
        android:id="@+id/actionButton"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:icon="@drawable/ic_favorite"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>